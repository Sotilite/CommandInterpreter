<Window x:Class="CommandInterpreter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandInterpreter"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="CommandInterpreter" Height="600" Width="1300">
    <Grid x:Name="MainRoot" RenderTransformOrigin="0.587,0.577" Margin="0,0,0,-16">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="521" MinHeight="38" Margin="0,51,0,0" RenderTransformOrigin="0.504,3.327" Height="38">
            <StackPanel Orientation="Horizontal" Margin="0,0,-219,0" VerticalAlignment="Center" Height="62" RenderTransformOrigin="0.5,1.554">
                <Button x:Name="runButton" Content="Run" Height="25" Width="86" Click="RunButtonClick" ClickMode="Press" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                <Button x:Name="clearButton" Content="Clear" Height="25" Width="86" Click="ClearButtonClick" ClickMode="Press" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                <Button x:Name="moveButton" Content="Move" Height="25" Width="87" Click="MoveButtonClick" ClickMode="Press" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                <Button x:Name="pointButton" Content="Point" Height="25" Width="87" Click="PointButtonClick" ClickMode="Press" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                <Button x:Name="circleButton" Content="Circle" Height="25" Width="87" Click="CircleButtonClick" ClickMode="Press" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                <Button x:Name="locationButton" Content="Location" Height="25" Width="86" Click="LocationButtonClick" ClickMode="Press" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" MinHeight="51" VerticalAlignment="Top" MinWidth="521" Height="51" >
            <TextBlock HorizontalAlignment="Left" Height="71" TextWrapping="Wrap" Text="Editor" TextAlignment="Center" FontSize="45" FontWeight="Medium" VerticalAlignment="Top" Width="521" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" MinHeight="572" Margin="521,0,0,0" VerticalAlignment="Top" MinWidth="779" Background="#CBB4CF"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" MinHeight="483" Margin="0,89,0,0" VerticalAlignment="Top" MinWidth="521">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" MinHeight="464" VerticalAlignment="Center" MinWidth="501" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" Color="Gray" ShadowDepth="0"/>
                </Border.Effect>
                <TextBox x:Name="commandInputConsole" materialDesign:HintAssist.Hint="Write command ..." FontSize="22" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" AcceptsReturn="True" Margin="9,9,9,9" />
            </Border>
        </Border>
    </Grid>
</Window>
