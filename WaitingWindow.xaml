<Window x:Class="CommandInterpreter.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandInterpreter"
        mc:Ignorable="d"
        Title="WaitingWindow" Height="200" Width="550">
    <Grid Background="White">
        <Border Margin="10,10,10,10" BorderBrush="Black" BorderThickness="1" CornerRadius="25" Background="#6C8CD5">
            <StackPanel HorizontalAlignment="Center" Margin="0,31,0,9">
                <TextBlock x:Name="informingText" Text="Ожидание выполнения команды ..." FontSize="25"  HorizontalAlignment="Center" FontWeight="Medium" Foreground="White" Height="56"/>
                <TextBlock Text="Можете закрыть данное окно" TextAlignment="Center" FontSize="20" FontWeight="Medium" Foreground="White" Height="40"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
